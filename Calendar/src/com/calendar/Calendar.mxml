		<mx:Button id="testbtn" click="onTest(event)" label="테스트"/>
		<mx:Label id="calText" />
		<mx:Label id="testText" />
		<lib:ExtLabel  id="test1" text="테스트!!!!" click="labeltest(event)" />
		<lib:ExtLabel  id="test2" text="테스트!!!!" click="labeltest(event)" />
